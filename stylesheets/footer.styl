footer#footer
  display block
  overflow hidden
  height 40px
  background #000
  position absolute
  z-index 10000000
  bottom 0px
  left 0px
  width 100%

#socials
  position absolute
  display inline-block
  width 150px

  margin-left 30px

  div
    width: 20px
    height: 20px
    margin-top: 9px
    margin-right: 5px
    display: inline-block

    &.googleplus { background-image: url('/images/socials_googleplus.png'); }
    &.facebook { background-image: url('/images/socials_facebook.png'); }
    &.twitter { background-image: url('/images/socials_twitter.png'); }
    &.something { background-image: url('/images/socials_something.png'); }

    span
      display: none;

#footMenu
  display block
  text-align right
  font-size 9px

  ul
    right 0px
    position absolute
    list-style none
    margin 0 0 0 0
    padding 14px 0 0 0
    li
      text-transform uppercase
      list-style none
      margin 0 0 0 0
      padding 0 0 0 0
      display inline-block
      margin-right 20px
      a
        color: #e8e8ca
        text-decoration none
        &:hover
          text-decoration: underline
  .soundSwitch
    .on, .off
      display none
    &.on .on, &.off .off
      display inline