html.mobile
  overflow hidden
  width 100%
  height 100%
  body
    background #0088ff
    width 100%
    height 100%
    overflow hidden
    position absolute

  footer#footer
  , #settingsGUIContainer
  , #scores
  , .play-friend
  , .links
    display none

  #canv-pixel
    width 1px
    height 1px
    border 5px solid pink
    background blue
    position absolute
    z-index 3

  .state.game-play 
    .countdown
      width 100%
    .countdown-number
      position relative
      width 100%

  #game
    height 0
    width 0
    left 50%
    top 50%
    > canvas, > video
      display none

  #canv-css
    width 1280px
    height 800px
    relative top -400px left -640px
    .background
      width 2560px
      height 1600px
      z=index 0
      absolute top -50% left -50%
      img
        width 100%
        height 100%

    .game-board
      width 1280px
      height 800px
      perspective 638px
      perspective-origin 50% 0%
      transform translateZ(0)
      // transform-style preserve-3d
      backface-visibility hidden

    .arena
      width 1280px
      height 1600px
      transform rotateX(101deg) translateX(0%) translateZ(-40px) translateY(-56%)
      transform-style preserve-3d
      backface-visibility hidden
      // background linear-gradient(bottom, rgba(255,255,0,.9), rgba(255,255,0,.4))
      position absolute
      z=index 1

  .paddle
    position absolute
    transform-style preserve-3d
    transform rotateX(90deg) translateX(200px) translateZ(5px) translateY(-50%)
    backface-visibility hidden
    transform-style preserve-3d
    transform-origin 50% 50% 0

  .shadow
    background black !important
    box-shadow 0 0 5px black

  .puck
    position absolute
    transform translateX(200px) translateZ(5px) translateY(-50%) rotateX(-90deg)
    backface-visibility hidden
    transform-style preserve-3d
    transform-origin 50% 50% 0