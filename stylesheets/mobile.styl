#canv-css
  width 1280px
  height 800px
  position absolute
  .background
    background url('/images/css/background.png') no-repeat
    width 100%
    height 100%
    z=index 0
    absolute top 0 left 0

  .game-board
    width 1280px
    height 800px
    perspective 638px
    perspective-origin 50% 0%
    // transform-style preserve-3d
    backface-visibility hidden

  .arena
    width 1280px
    height 1600px
    transform rotateX(101deg) translateX(0%) translateZ(-40px) translateY(-56%)
    transform-style preserve-3d
    backface-visibility hidden
    // background linear-gradient(bottom, rgba(255,255,0,.9), rgba(255,255,0,.4))
    position absolute
    z=index 1

#center
  absolute top 50%
  width 100% 
  // height 20px
  background blue
  transform-style preserve-3d


.paddle
  position absolute
  transform-style preserve-3d
  transform rotateX(90deg) translateX(200px) translateZ(5px) translateY(-50%)
  backface-visibility hidden
  transform-style preserve-3d
  transform-origin 50% 50% 0

.shadow
  background black !important
  box-shadow 0 0 5px black

.puck
  position absolute
  transform translateX(200px) translateZ(5px) translateY(260px)
  backface-visibility hidden
  transform-style preserve-3d
  transform-origin 50% 50% 0