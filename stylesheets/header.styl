header.main-menu
  position absolute
  z-index 3
  width 100%
  height 100%
  top 0px
  text-align center
  color #f8fadb

  p
    margin 0
    padding 0

  .nav
    display block
    position absolute
    text-align center
    bottom 90px
    width 100%
    box-sizing border-box
    padding 0 15%
    line-height 20px
    letter-spacing 17px
    clearfix()
    button
      min-width 275px
      margin-top 10px

  .notifications
    max-width 550px
    margin 0 auto 15px
    font-size 11px
    line-height 1.5em

    .notification
      display none


  hgroup
    overflow hidden
    padding 50px 0px 0px 0px

    h1
      padding 10px 0px 10px 0px
      span
        display none

    h2
      font-size 12px

    h2, h3
      display none

    img
      width 70%
      height auto
      margin-bottom 0

  .links
    .experiment, .from
      text-transform none
      display block
      text-decoration none
      absolute bottom 67px
      font-size 56px
      color #ffffff
      // z-index 6

      span
        display none

    .from
      right 30px
      font-size 61px

    .experiment
      left 30px
      line-height 1.15em