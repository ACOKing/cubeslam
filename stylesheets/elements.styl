button, a.button
  cursor pointer
  font-family: 'Varela', sans-serif
  font-size: 14px
  line-height: 14px
  width: auto
  border-top: 5px solid #f9f9da
  border-left: 5px solid #f9f9da
  border-right: 5px solid #a7a793
  border-bottom: 5px solid #a7a793
  color: #449744
  background: #e2e2c5
  padding: 10px 50px 10px 50px; /* Det ska vara 8px uppe och nere med typsnittet Ã¤r lite fucked. */
  text-transform: uppercase
  text-decoration: none
  letter-spacing: 2px
  font-weight: bold

  &.green
    color: #f9f9da
    background: #4daf4d
    border-top: 5px solid #58c458
    border-left: 5px solid  #58c458
    border-bottom: 5px solid #398239
    border-right: 5px solid  #398239
    outline: solid 2px #4daf4d

   &.blue
    color: #f9f9da
    background: #5194d6
    border-top: 5px solid #62a5e7
    border-left: 5px solid  #62a5e7
    border-bottom: 5px solid #2e71b3
    border-right: 5px solid  #2e71b3
    outline: solid 2px #5194d6
  

  &.alternative
    font-family: 'Varela', sans-serif;
    font-size: 12px;
    line-height: 12px;
    background: none;

    color: #e83028;
    border: 1px solid #e83028;
    padding: 5px 12px 6px 12px;
    margin: 0px 4px 0px 3px;
    text-decoration: none;

    &.green
      background: none;
      color: #4daf4d;
      border: 1px solid #4daf4d;

  &:disabled,
  &.disabled,
  &:disabled:hover
    color: #577da3;
    background: #31669a !important;
    border: 5px solid #2c5f91;
    outline: solid 2px #3e7dbc;