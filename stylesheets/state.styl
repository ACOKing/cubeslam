.state
  visibility hidden
  display block
  h2, h3, h4, h5, p
    text-transform uppercase
  &.active
    visibility visible
    display block

  &.loading
    display block
    position absolute
    background-color white
    z-index 5
    width 100%
    height 100%
    overflow hidden
    visibility visible

  &.game-instructions,
  &.state.game-info,
  &.state.game-start
    box-orient horizontal
    box-pack center
    box-align center
    width 100%
    height 100%
    position: absolute
    top 0
    left 0
    z-index 3
    perspective 2000px
    transform rotateX( 0 )

  &.inactive .dialog.middle .content
    transform-origin center center
    transform rotateX( -90deg )

  &.friend-invite
    #share-url
      display inline
      font-family: 'Varela' sans-serif
      background #2aa52a
      padding 7px 0 7px
      margin 0 0 20px -7px
      font-size 11px
      width 85px
      color $color-beige
      text-transform uppercase
      border none
      cursor pointer
      &:hover, &.hover
        background #207f20

    .share-url
      background $color-beige
      color #2aa52a
      width 303px
      padding 8px 5px 7px 5px
      border 1px solid #2aa52a
      display inline-block
      overflow hidden
      white-space nowrap
      &:focus
        outline none
      &::selection
        background #2aa52a
        color $color-beige

    p
      max-width 350px
      margin 0 auto 20px
      line-height 1.4em

  &.game-play
    &.inactive 
      .content
        opacity 0

    .content.center
      display flex
      box-orient horizontal
      box-direction row
      box-wrap nowrap
      justify-content center
      align-content stretch
      align-items center
      transition opacity .1s

      width 100%
      height 100%
      absolute top 0 left 0
      z-index 3

    .countdown
      align-self center
      flex 0 1 auto


    .countdown-number
      position absolute
      width 988px
      height 718px
      opacity 0
      transition opacity .3s ease-out
      transform scale(0.5)
      // translate(0, 90px)
      background url('/images/countdown-s9fee64d48a.png') no-repeat

      &[data-number="3"]
        background-position 0 -718px
      &[data-number="2"]
        background-position 0 0
      &[data-number="1"]
        background-position 0 -1436px
      &.visible
        opacity 1

  &.game-pause
    button
      display block
      min-width 275px
      margin 0 auto
      &:last-child
        margin-top 20px
    h2
      padding-bottom 20px
    p
      padding-bottom 25px

  &.webcam-information
    .dialog
      button
        margin 10px 0px 20px 0px

    #activate-camera
      color #40a040
      text-decoratio: underline
      text-transform uppercase
      float left
      line-height 45px

  &.game-over
    text-align center
    height 100%

    img.key
      width 60%
      height auto
      margin-top 21%
      z-index 3

    .dialog
      height 33%
      min-height 266px

    h2
      font-family 'Varela', sans-serif
      font-size 14px
      padding-top 15px

    h3
      font-family 'Varela', sans-serif
      font-size 11px
      margin-bottom 13px

    p
      padding-bottom 25px

    .scoreboard
      color #e83129
      display flex
      box-orient horizontal
      box-pack center
      box-align center
      padding 20px 0px 40px 0px

      &.multiplayer
        padding 0px 0px 20px 0px

      div
        margin-right 20px
        &:last-child
          margin-right 0px

        &.highscoreDigit
          color $color-beige
          font-size 24px
          background #e83129
          width 50px
          height 50px
          line-height 50px
          text-align center
          overflow hidden
          padding 0
          border-radius 25px
          box-sizing border-box
          padding-left 2px

    ul.social
      .icon
        background $color-green
        color $color-beige

  &.game-info
    .info-animation
      display inline-block
      width 210px
      transform translateY(-20px)
      p
        font-size 14px
        white-space nowrap
      &.hidden
        display none

  &.error
    .connection-error
      .cpu-conn-failed-anim
        margin-bottom 10px

    p
      max-width 460px
      margin 0 auto
      line-height 1.8em

    button, .button
      margin-top 24px

  &.loading
    height 100%
    width 100%
    background $color-beige url('/images/opponent_computer.gif') no-repeat center center



.game-controls
  width 100%

  .animation
    margin 25px 0 28px

    > div
      display inline-block

    > p
      display inline-block
      vertical-align top
      margin 42px 7px 0

#scores
  color $color-beige
  position absolute
  z-index 6
  top 100px
  left 70px
  line-height 15px

  img
    margin-bottom 14px

  &.inactive
    display none

  .score
    font-family 'eboyregalpha'
    font-size 60px
    font-weight normal
    line-height 51px

  .player, .opponent
    margin-top 10px
    p
      font-size 11px
      margin-bottom 3px

  .player
    margin-top 20px


  ol
    li
      perspective 20
      width 26px
      height 26px
      border 2px solid #FFF
      display inline-block
      margin-left 7px
      position relative
      transition transform 300ms ease-out
      // transform-origin center center
      transform-style preserve-3d
      backface-visibility hidden

      &:before
        content ''
        display block
        absolute top -2px left -6px
        width 34px
        height 33px

        transform rotateY(-180deg)
        backface-visibility hidden
        // transform-style preserve-3d

        background transparent url('/images/score-rect.png') no-repeat

      &:first-child
        margin-left 0
      &.active
        transform rotateY(180deg)

#level
  &.inactive
    display none

#scoresRunning
  &.inactive
    display none