header.main-menu
  position absolute
  z-index 3
  width 100%
  height 100%
  top 0px
  text-align center
  color #f8fadb

  p
    margin 0
    padding 0

  .nav
    display block
    position absolute
    text-align center
    bottom 100px
    width 100%

    button
      margin-top 25px
      min-width 275px

  .notifications
    width 550px
    margin 0 auto
    display none

  button.play-computer
    margin-left 20px

  hgroup
    overflow hidden
    padding 50px 0px 0px 0px

    h1
      padding 10px 0px 10px 0px
      span
        display none

    h2
      font-size 12px

    img
      width 70%
      height auto
      margin-bottom 0

  .links
    .tech
      min-height 44px
      color #ffffff
      absolute bottom 63px right 30px
      z-index 6
      text-align right
      padding 0px 80px 0px 0px
      background url('/images/minipong.png') no-repeat right center
      font-size 12px
      font-weight bold
      text-decoration none
      line-height 15px
      letter-spacing 2px
      display block
      small
        margin-top -13px
        padding 0px 0px 4px 0px
        font-size 8px
        line-height 14px
    .experiment
      font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
      text-transform none
      font-size 24px
      line-height 106%
      text-decoration none
      width 107px
      height 56px
      color #ffffff
      position absolute
      bottom 63px
      left 30px
      z-index 6
      margin 0
      padding 0
      display block
      background-image url("/images/chrome-experiment.png")

      small
        display block
        font-size 11px
        line-height 11px
        margin 0
        padding 0

      p
        display block
        margin 3px 0px 0px 0px
        padding: 0