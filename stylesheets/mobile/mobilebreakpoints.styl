@media (orientation: portrait)
  html.mobile
    header
      h1 
        top 6%
        img
          width 85%

    .swipe-instruction
      display none
    .touch 
      .keyboard
        display none

      .swipe-instruction
        display block
        transition opacity .5s
        transition-delay .4s
        &.hide
          opacity 0

    #gamepad
      display none!important
    #canv-css
      top -255px

    body.game-over
      #footer
        display inline-block
        background-color transparent


@media (orientation: landscape)
  html.mobile
    .touch
      .keyboard
        display none
      #gamepad.state.active
        display block!important

    .game-over
      h3, #single-levels
        display inline-block
      h3
        padding 7px 0 17px 25px
        vertical-align middle
      .content
        padding-bottom 30px
      .social 
        bottom 10px
    #canv-css
      top -290px

    #scores
      width 100%
      
      .singleplayer, .multiplayer
        .player, .opponent
          display block
          clearfix()
      p
        margin-bottom 0
      p, ol
        float left

    .dialog
      bottom 0

    header .nav
      bottom 10px

      #canv-css
        top -266px

    body.main-menu, body.game-over
      #footer
        display inline-block
        background-color transparent

    .swipe-instruction
      display none

@media all and (min-width: 800px) and (min-height: 640px)
  html.mobile
    .state.game-prompt
      .background 
        height 100px
        margin-top -50px

      h1, h2, h3, h4
        font-size 40px


