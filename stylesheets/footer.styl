footer#footer
  display block
  overflow hidden
  height 40px
  background #000
  position absolute
  z-index 10000000
  bottom 0px
  left 0px
  width 100%

#socials
  position absolute
  display table
  border-collapse separate
  border-spacing 5px
  // width 150px

  margin-left 30px

  .icon
    background #e8e8ca
    width 20px
    height 20px
    margin-top 9px
    font-size 16px
    border-radius 3px
    display table-cell
    vertical-align middle

    &:before
      display inline-block
      text-align center
      width 100%
      vertical-align middle

    &:after
      content ' '
      height 100%
      display inline-block
      position absolute
      width 1pxs

    &:hover
      background #000
      color #e8e8ca


    span
      display: none;

#footMenu
  display block
  text-align right
  font-size 9px

  ul
    right 0px
    position absolute
    list-style none
    margin 0 0 0 0
    padding 14px 0 0 0
    li
      text-transform uppercase
      list-style none
      margin 0 0 0 0
      padding 0 0 0 0
      display inline-block
      margin-right 20px
      a
        color: #e8e8ca
        text-decoration none
        &:hover
          text-decoration: underline

  .sound-switch
    .on, .off
      display none
    &.on .on,
    &.off .off
      display inline