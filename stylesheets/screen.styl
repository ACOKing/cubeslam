@import 'nib'
@import 'vars'

// global-reset()
// reset-html5()

ul, li, ol
  margin 0
  padding 0

html
  width 100%
  height 100%
  overflow hidden
  font-size 100%

body
  width 100%
  height 100%
  overflow hidden
  padding 0px 0px 0px 0px
  margin 0px 0px 0px 0px
  background $color-beige
  font-family 'Varela', sans-serif
  //Resets 1em to 10px
  font-size: 62.5%;
  line-height 1em
  letter-spacing 2px
  font-weight normal
  font-style normal

#game
  position absolute
  top 0
  height 100%
  width 100% // only while debugging with canv-db
  box-sizing border-box
  overflow hidden

  canvas
    relative top 0px left

  #canv-2d
    absolute top 20px left

  #canv-db
    absolute top 20px right
    left auto

  > *
    &.hidden
      display none

html
  .mobile
    display none

#fpsCameraCapture
  position absolute
  display none
  height 100%
  width 100%
  top 0
  display none

#latency
  color white
  absolute top right
  z-index 10
  &.good
    background-color green
  &.ok
    background-color orange
  &.bad
    background-color red

.mirror
  transform scaleX(-1)

  .active *
    transform translateZ(0)

  &.game-pause
    footer, section.game-pause .dialog
      transform scaleX(-1)


