html.mobile
  &.theme-default
    #canv-css
      .background, .extra
        -webkit-filter unquote('hue-rotate(360deg)')
  &.theme-green
    #canv-css
      .background, .extra
        -webkit-filter unquote('hue-rotate(101deg) saturate(42%)')
  &.theme-purple
    #canv-css
      .background, .obstacles .obstacle
        -webkit-filter unquote('hue-rotate(291deg) saturate(36%)')
  &.theme-pastell
    #canv-css
      .background, .extra
        -webkit-filter unquote('hue-rotate(245deg) saturate(36%)')
  &.theme-pink
    #canv-css
      .background, .extra
        -webkit-filter unquote('hue-rotate(-29deg) saturate(73%)')
  &.theme-light
    #canv-css
      .background, .extra
        -webkit-filter unquote('hue-rotate(181deg) saturate(63%)')
  &.theme-orange
    #canv-css
      .background, .extra
        -webkit-filter unquote('hue-rotate(196deg) saturate(46%)')
  &.theme-forrest
    #canv-css
      .background, .extra
        -webkit-filter unquote('hue-rotate(338deg) saturate(36%)')


